<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ece318_librarymanagementsys_uc1069790.MainController">

    <!-- TOP AREA -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Lefteris Library Management System" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
        </HBox>
    </top>

    <!-- CENTER AREA -->
    <center>
        <TabPane fx:id="mainTabPane">
            <tabs>
                <!-- BOOKS TAB -->
                <Tab text="Books" fx:id="booksTab">
                    <BorderPane fx:id="booksPane">
                        <top>
                            <HBox spacing="10">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <TextField fx:id="searchBooksField" promptText="Search by title or author..." />
                                <ComboBox fx:id="filterGenreBox" promptText="Filter by Genre"/>
                                <ComboBox fx:id="filterSubGenreBox" promptText="Filter by Sub-genre"/>
                                <Button text="Export PDF" fx:id="exportBooksBtn"/>
                            </HBox>
                        </top>

                        <center>
                            <SplitPane dividerPositions="0.67">
                                <items>
                                    <TableView fx:id="booksTable">
                                        <columns>
                                            <TableColumn fx:id="colTitle" text="Title"/>
                                            <TableColumn fx:id="colAuthor" text="Author"/>
                                            <TableColumn fx:id="colGenre" text="Genre"/>
                                            <TableColumn fx:id="colSubGenre" text="Sub-Genre"/>
                                            <TableColumn fx:id="colPrice" text="Price"/>
                                            <TableColumn fx:id="colRating" text="Rating"/>
                                        </columns>
                                    </TableView>
                                    <VBox fx:id="bookDetailsPane" spacing="8" prefWidth="320" visible="false" managed="false"
                                          style="-fx-background-color: #f4f6f8; -fx-padding: 16;">
                                        <HBox alignment="CENTER_RIGHT">
                                            <Button fx:id="closeDetailsButton" text="âœ•" onAction="#handleCloseDetails"
                                                    style="-fx-background-color: transparent; -fx-font-size: 16; -fx-text-fill: #7f8c8d;" />
                                        </HBox>
                                        <Label text="Book Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                        <Separator />
                                        <GridPane hgap="10" vgap="8">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" prefWidth="100" />
                                                <ColumnConstraints prefWidth="200" />
                                            </columnConstraints>
                                            <Label text="Title:" GridPane.rowIndex="0" />
                                            <Label fx:id="detailTitle" GridPane.rowIndex="0" GridPane.columnIndex="1" wrapText="true" />
                                            <Label text="Author:" GridPane.rowIndex="1" />
                                            <Label fx:id="detailAuthor" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true" />
                                            <Label text="Main Genre:" GridPane.rowIndex="2" />
                                            <Label fx:id="detailMainGenre" GridPane.rowIndex="2" GridPane.columnIndex="1" wrapText="true" />
                                            <Label text="Sub-Genre:" GridPane.rowIndex="3" />
                                            <Label fx:id="detailSubGenre" GridPane.rowIndex="3" GridPane.columnIndex="1" wrapText="true" />
                                            <Label text="Type:" GridPane.rowIndex="4" />
                                            <Label fx:id="detailType" GridPane.rowIndex="4" GridPane.columnIndex="1" wrapText="true" />
                                            <Label text="Price:" GridPane.rowIndex="5" />
                                            <Label fx:id="detailPrice" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                                            <Label text="Rating:" GridPane.rowIndex="6" />
                                            <Label fx:id="detailRating" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                                            <Label text="Ratings Count:" GridPane.rowIndex="7" />
                                            <Label fx:id="detailNumRated" GridPane.rowIndex="7" GridPane.columnIndex="1" />
                                        </GridPane>
                                        <Separator />
                                        <Label text="Link:" />
                                        <Label fx:id="detailUrl" wrapText="true" />
                                    </VBox>
                                </items>
                            </SplitPane>
                        </center>

                        <bottom>
                            <HBox spacing="10" alignment="CENTER">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <Button text="Add" fx:id="addBookBtn"/>
                                <Button text="Edit" fx:id="editBookBtn"/>
                                <Button text="Delete" fx:id="deleteBookBtn"/>
                            </HBox>
                        </bottom>
                    </BorderPane>
                </Tab>

                <!-- GENRES TAB -->
                <Tab text="Genres" fx:id="genresTab">
                    <BorderPane fx:id="genresPane">
                        <center>
                            <TableView fx:id="genresTable">
                                <columns>
                                    <TableColumn fx:id="colGenreName" text="Genre"/>
                                    <TableColumn fx:id="colGenreDescription" text="Description"/>
                                </columns>
                            </TableView>
                        </center>
                    </BorderPane>
                </Tab>

                <!-- SUB-GENRES TAB -->
                <Tab text="Sub-genres" fx:id="subGenresTab">
                    <BorderPane fx:id="subGenresPane">
                        <center>
                            <TableView fx:id="subGenresTable">
                                <columns>
                                    <TableColumn fx:id="colSubGenreName" text="Sub-Genre"/>
                                    <TableColumn fx:id="colParentGenre" text="Parent Genre"/>
                                </columns>
                            </TableView>
                        </center>
                    </BorderPane>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>
